folder('Prod') {
    description('This folder contains all the prod pipeline jobs')
}

pipelineJob('prod/a)Network-skeleton') {
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url('https://github.com/mygurkulam-p9/Jenkinsfiles.git')
                        credentials('github-token1')
                    }
                    branch('main')
                }
                scriptPath('Job-Dsl/Prod/Network-skeleton/Jenkinsfile')
            }
        }
    }
}

